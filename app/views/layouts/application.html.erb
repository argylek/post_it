<!DOCTYPE html>
<html>
  <head>
    <title>PostIt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Post-It note App</h1>
    <header class='clearfix'>
      <div class="left-nav">
        <ul>
          <li><%= link_to "Home", postits_path %></li>
        </ul>
      </div>
      <div class="right-nav">
        <ul>
          <li><%= link_to 'New Post-it', new_postit_path %></li>
        </ul>
      </div>
    </header>
    <div class='content'>
      <%= yield %>
    </div>
  </body>
</html>
